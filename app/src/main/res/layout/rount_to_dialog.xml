<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title"
        android:background="?attr/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textLight"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:text="Round to "/>
        <ImageView
            android:id="@+id/round_to_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_close_black_24dp"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="?attr/textLight"
        android:gravity="center"
        android:text="Enter the number of decimals to round to"/>

    <EditText
        android:id="@+id/round_to_picker"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ellipsize="start"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLength="5"/>
    <TextView
        android:id="@+id/round_to_select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="?attr/textLight"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="SELECT"/>
</LinearLayout>