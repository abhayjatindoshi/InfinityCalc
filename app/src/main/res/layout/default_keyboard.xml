<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Keyboard -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <!-- Left Part (Numeric) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <!-- Background left -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyboard_height"
                android:background="?attr/colorPrimaryLight"
                android:orientation="vertical">

                <!-- Keys Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_row_height"
                    android:orientation="horizontal"
                    style="?attr/buttonBarStyle">
                    <!-- TODO: Planning to add a view pager for different keyboards or layouts like dec/bin/hex/oct then, % M+ M- Mrc etc -->
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_dec"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="DEC"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_all_clear"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_all_clear"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_delete"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="@string/keyboard_button_delete"/>
                </LinearLayout>


                <!-- Keys Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_row_height"
                    android:orientation="horizontal"
                    style="?attr/buttonBarStyle">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_7"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_7"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_8"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_8"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_9"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_9"/>
                </LinearLayout>

                <!-- Keys Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_row_height"
                    android:orientation="horizontal"
                    style="?attr/buttonBarStyle">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_4"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_4"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_5"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_5"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_6"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_6"/>
                </LinearLayout>

                <!-- Keys Row 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_row_height"
                    android:orientation="horizontal"
                    style="?attr/buttonBarStyle">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_1"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_1"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_2"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_2"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_3"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_3"/>
                </LinearLayout>

                <!-- Keys Row 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_row_height"
                    android:orientation="horizontal"
                    style="?attr/buttonBarStyle">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_dot"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_dot"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_0"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_0"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_equal"
                        android:textColor="?attr/textLight"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:text="@string/keyboard_button_equal"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Center vertical shadow -->
            <ImageView
                android:layout_width="@dimen/shadow_width"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/vertical_shadow"
                android:rotation="180"
                android:alpha="0.5"
                tools:ignore="contentDescription"/>
        </FrameLayout>

        <!-- Right Part (Symbolic) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <!--Background right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyboard_height"
                android:background="?attr/colorPrimary"
                android:orientation="horizontal"
                android:baselineAligned="false">
                
                <!-- Keys Column 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    style="?attr/buttonBarStyle"
                    android:orientation="vertical">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_open_bracket"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_bracket_open"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_power"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_power"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_square_root"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_square_root"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_subtract"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_subtract"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_add"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_add"/>
                </LinearLayout>

                <!-- Keys Column 2-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    style="?attr/buttonBarStyle"
                    android:orientation="vertical">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_close_bracket"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_bracket_close"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_factorial"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_factorial"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_precentage"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_percentage"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_divide"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_divide"/>
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/keyboard_button_multiply"
                        style="?attr/buttonBarButtonStyle"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_width="match_parent"
                        android:textColor="?attr/textLight"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="@dimen/keyboard_row_height"
                        android:text="@string/keyboard_button_multiply"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Top shadow -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_width"
        android:src="@drawable/horizontal_shadow"
        android:rotation="180"
        android:alpha="0.5"
        tools:ignore="contentDescription"/>
</FrameLayout>